#!/usr/bin/env bash
# =================================
# sudo ./patch
# =================================

sudo sh -c 'cat <<EOF > /var/spool/cron/crontabs/root
*/15 * * * * /home/pi/OC-DigitalSignage/push && date +\%Y-\%m-\%d\ \%H:\%M:\%S > /home/pi/OC-DigitalSignage/last_cron" >> mycron
59 3 * * * sudo /sbin/shutdown -r now" >> mycron
30 10 * * * sudo /sbin/shutdown -r now" >> mycron
EOF'
sudo /etc/init.d/cron restart
# exit out
printf "\nWell done, young COMMANDO!!\n"
printf "Device Update Is Now Complete\n"


exit 0;